<% layout("./template/boilerplate") %>
    <h1>All Camps</h1>
    <% for (let camp of allcamps) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=camp.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/camp/<%=camp.id%>">View <%=camp.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
            <form action="/allcamps?_method=DELETE" method="POST">
                <Button class="btn btn-danger">DELETE ALL</Button>
            </form>
            <form action="/camp/newcamp" method="GET">
                <Button class="btn btn-success">ADD NEW CAMP</Button>
            </form>